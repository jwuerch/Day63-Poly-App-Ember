
<div class='page-header'>
    <h1>Register</h1>
</div>

<div class="form-group">
  <label for="email">Email</label>
  {{input type='text'
    class='form-control'
    value=email
    placeholder='email'}}
</div>
<div class="form-group">
  <label for="password">Password</label>
{{input type='password'
    class='form-control'
    value=password
    placeholder='password'}}
</div>
<button class='btn btn-default' {{action 'signUp'}}>{{fa-icon 'user-plus'}} Sign Up
</button>
{{#if addNewUser}}
  {{user-new saveUser="saveUser"}}
{{/if}}
